<h1>Listing users</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Email</th>
        <th>Type</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
          <td><%= user.type %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


