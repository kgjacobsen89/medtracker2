<h1>Sign in</h1>

<%= form_for @user, {url: session_path} do |f| %>

	<div class="field">
		<%= f.label :username %><br>
		<%= f.text_field :username %>
	</div>
	<div class="field">
		<%= f.label :password %><br>
		<%= f.password_field :password %>
	<div class="actions">
		<%= f.submit "Sign in" %>
	</div>
<% end %>
