<h1>Listing Doctors</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Last name</th>
        <th>First name</th>
        <th>Specialty</th>
        <th>City</th>
        <th>Phone number</th>
      </tr>
    </thead>

    <tbody>
      <% @doctors.sort { |a,b| a.name <=> b.name }.each do |doctor| %>
        <tr>
          <td><%= doctor.last_name %></td>
          <td><%= doctor.first_name %></td>
          <td><%= doctor.specialty %></td>
          <td><%= doctor.city %></td>
          <td><%= doctor.phone_number %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  

