<%= form_for(@patient) do |f| %>

  <div class="field">
    <%= f.label "Doctors" %><br>
    <%= f.collection_check_boxes(:doctor_ids, Doctor.order("last_name ASC", "first_name ASC", "specialty ASC"), :id, :name) do |b| %>
      
      <%= b.label { b.check_box } %>
      <%= b.label { b.text } %>
      <br>
    <% end %>

  </div>
  <div class="field">
    <%= f.hidden_field :patient_id, value: current_user.id %>
  </div>
  <div class="actions">
    <%= f.submit @button_face, :class => "btn btn-primary" %>
  </div>
<br>
<% end %>
